{% extends "layout.html.twig" %}

{% block title %}
	{{parent()}} - Liste des catégories d'affaires
{% endblock %}

{% block gsbobjcom_body %}
	<h2>Liste des catégories d'affaires</h2>
	<ul>
		{% for uneCateg in lesCategs %}
		<li>
			{# Déclaration de la variable id_modif pour la passer d'URL #}
			{% set id_modif='/company/business/category/edit/' ~ uneCateg.id %}

			<p>{{uneCateg.label}}
			<a href={{id_modif}} class="btn btn-default"><i class="glyphicon glyphicon-edit"></i> Modifier</a>&nbsp;&nbsp;

			{# Déclaration de la variable id_suppress pour la passer d'URL #}
			{% set id_suppress='/company/business/category/delete/' ~ uneCateg.id %}
			<a href={{id_suppress}} class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i> Supprimer</a></p>
		</li>
		{% else %}
		<li>Pas de catégorie d'affaire enregistré</li>
		{% endfor %}
	</ul>
{% endblock %}