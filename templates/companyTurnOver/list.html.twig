{% extends "layout.html.twig" %}

{% block title %}
	{{parent()}} - Liste des chiffres d'affaires
{% endblock %}

{% block gsbobjcom_body %}
	<h2>Liste des chiffres d'affaires</h2>
	<ul>
		{% for unChiffre in lesChiffresDAffaires %}
		<li>
			{# Déclaration de la variable id_modif pour la passer d'URL #}
			{% set id_modif='/company/turnOver/edit/' ~ unChiffre.id %}

			<p>{{unChiffre.turnover}}
			<a href={{id_modif}} class="btn btn-default"><i class="glyphicon glyphicon-edit"></i> Modifier</a>&nbsp;&nbsp;


			{# Déclaration de la variable id_suppress pour la passer d'URL #}
			{% set id_suppress='/company/turnOver/delete/' ~ unChiffre.id %}
			<a href={{id_suppress}} class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i> Supprimer</a></p>
		</li>
		{% else %}
		<li>Pas de chiffre d'affaires enregistrés</li>
		{% endfor %}
	</ul>
{% endblock %}