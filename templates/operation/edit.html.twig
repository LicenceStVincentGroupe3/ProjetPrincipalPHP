{% block h1 %}Opération{% endblock %}

{% block contentBody %}

        <div class="tab-panels">
                {{ form_start(form, {'method': 'POST'}, {'attr': {'novalidate': 'novalidate'}}) }}
                <div class="row">
                    <div class="col-lg-7 mx-auto">
                        <div class="row my-form-field">
                            <div class="col-lg-4 mx-auto">
                                {{ form_label(form.operationName, null, {'label_attr': {'class': 'my-form-label'}}) }}
                            </div>
                            <div class="col-lg-7 mx-auto">
                                {{ form_widget(form.operationName, {'attr': {'class': 'form-control my-form-input-little', 'placeholder': "Ex: 1254789"}}) }}

                                {{ form_errors(form.operationName, {'attr': {'class': 'form-error-message'}}) }}
                            </div>
                        </div>
                        <div class="row my-form-field">
                            <div class="col-lg-4 mx-auto">
                                {{ form_label(form.operationUrlPage, null, {'label_attr': {'class': 'my-form-label'}}) }}
                            </div>
                            <div class="col-lg-7 mx-auto">
                                {{ form_widget(form.operationUrlPage, {'attr': {'class': 'form-control my-form-input-little'}}) }}

                                {{ form_errors(form.operationUrlPage, {'attr': {'class': 'form-error-message'}}) }}
                            </div>
                        </div>
                        <div class="row my-form-field">
                            <div class="col-lg-4 mx-auto">
                                {{ form_label(form.operationHeadBandVisual, null, {'label_attr': {'class': 'my-form-label'}}) }}
                            </div>
                            <div class="col-lg-7 mx-auto">
                                {{ form_widget(form.operationHeadBandVisual, {'attr': {'class': 'form-control my-form-input-big'}}) }}

                                {{ form_errors(form.operationHeadBandVisual, {'attr': {'class': 'form-error-message'}}) }}
                            </div>
                        </div>
                        <div class="row my-form-field">
                            <div class="col-lg-4 mx-auto">
                                {{ form_label(form.operationLateralVisual, null, {'label_attr': {'class': 'my-form-label'}}) }}
                            </div>
                            <div class="col-lg-7 mx-auto">
                                {{ form_widget(form.operationLateralVisual, {'attr': {'class': 'form-control my-form-input-big'}}) }}

                                {{ form_errors(form.operationLateralVisual, {'attr': {'class': 'form-error-message'}}) }}
