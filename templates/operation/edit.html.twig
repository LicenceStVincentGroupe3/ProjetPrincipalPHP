                        </div>
                        <div class="row my-form-field">
                            <div class="col-lg-4 mx-auto">
                                {{ form_label(form.operationModified, null, {'label_attr': {'class': 'my-form-label'}}) }}
                            </div>
                            <div class="col-lg-7 mx-auto">
                                {{ form_widget(form.operationModified, {'attr': {'class': 'form-control my-form-input-big'}}) }}

                                {{ form_errors(form.operationModified, {'attr': {'class': 'form-error-message'}}) }}
                            </div>
                        </div>
                        <div class="row my-form-field">
                            <div class="col-lg-4 mx-auto">
                                {{ form_label(form.operationBinding, null, {'label_attr': {'class': 'my-form-label'}}) }}
                            </div>
                            <div class="col-lg-7 mx-auto">
                                {{ form_widget(form.operationBinding, {'attr': {'class': 'form-control my-form-input-big'}}) }}

                                {{ form_errors(form.operationBinding, {'attr': {'class': 'form-error-message'}}) }}
                            </div>
                        </div>
                    </div>
                </div>

                {{ form_widget(form.save, {'attr': {'class': 'btn submit-button'}}) }}
                {{ form_end(form) }}
            </section>
        </div>
    </div>

{% endblock %}

