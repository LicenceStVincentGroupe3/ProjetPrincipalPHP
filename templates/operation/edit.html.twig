                        </div>
                        <div class="row my-form-field">
                            <div class="col-lg-4 mx-auto">
                                {{ form_label(form.operationDisplayed, null, {'label_attr': {'class': 'my-form-label'}}) }}
                            </div>
                            <div class="col-lg-7 mx-auto">
                                {{ form_widget(form.operationDisplayed, {'attr': {'class': 'form-control my-form-input-big'}}) }}

                                {{ form_errors(form.operationDisplayed, {'attr': {'class': 'form-error-message'}}) }}
